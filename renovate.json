{
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "timezone": "Asia/Tokyo",
  "baseBranches": ["dev"],
  "schedule": [
    "every weekend"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "groupName": "dependencies"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "devDependencies"
    }
  ]
}